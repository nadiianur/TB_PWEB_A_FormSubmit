                </div>

                <div>

                    <p class="upload-info mt-2">Deadline Submission :</p>
                    <p class="upload-date mb-2"><%= form.deadline %></p>
                    <p class="instruction-info">Instructions :</p>
                    <p class="instruction-text mb-2"><%= form.description %></p>
                    <p class="instruction-info">By :</p>
                    <p class="instruction-text mb-2"><%= user.nama %></p>
                    <hr>
                </div>
                <!-- End -->

                <h2 class="answer-title mb-1">&nbsp; Answer</h2>
                <p style="color:midnightblue; margin-left: 90px;font-weight:lighter; font-size: 18px;"> [ status :
                    <%= item.status %> ]</p>
                <!-- Form Edit Data Submission -->
                <form class="form-edit" action="/submission/editSubmission/<%= item.id%>" method="post" id="form-edit">
                    <ul style="margin-right: 130px;">
                        <li class="list-group-item">
                            <div class="file-upload-container">
                                <div class="upload-container mt-2">
                                    <p style="color: black; margin-left: 25px;font-weight: bold; font-size: 18px;">
                                        My Submission File</p>
                                    <input type="file" class="form-control" id="floatingInput" placeholder="file-upload"
                                        name="file" value="<%= uploaded_file %>" required>
                                </div>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="description-section">
                                <p style="color: black;font-weight: bold;" for="floatingInputDesc">
                                    Comments</p>
                                <textarea placeholder="Add a comment (optional)" type="text" class="form-control"
                                    id="floatingInputDesc" name="description"
                                    style="margin-left: 1px;"><%= item.description || '' %></textarea>
                            </div>
                        </li>
                    </ul>
                </form>
                <!-- End -->

                <div class="action-buttons">
                    <a href="/submission/upload/<%= form.form_id%>" class="cancel-button btn btn-secondary">
                        Cancel
                    </a>
                    <button form="form-edit" id="form-edit" class="upload-button btn btn-lg btn-success me-3"
                        type="submit">
                        Update
                    </button>
                </div>
            </div>
        </div>
