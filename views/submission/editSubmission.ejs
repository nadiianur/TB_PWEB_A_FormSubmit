    <script src="../../../assets/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../../../assets/js/sidebars.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", async function () {

            const form = document.getElementById('form-edit');
            form.addEventListener('submit', async (event) => {
                event.preventDefault();

                const description = document.getElementById('floatingInputDesc').value;
                const file = document.getElementById('floatingInput').files[0];

                const formData = new FormData();
                formData.append('description', description);
                formData.append('file', file);

                const id = '<%= id%>'
                try {
                    const response = await fetch(
                        `http://studyin.northeurope.cloudapp.azure.com/form/editForm/${id}`, {
                            method: 'POST',
                            body: formData
                        });

                    const data = await response.json()

                    if (data.success == true) {
                        alert(data.msg);
                        window.location.href = '/form/home';
                    } else if (data.success == false) {
                        alert(data.msg);
                        location.reload()
                    } else if (data.success == "undefined") {
                        alert(data.msg)
                        location.reload()
                    }
                } catch (error) {
                    console.log(error);
                    alert(error)
                }
            })

            const btnLogout = document.getElementById('btn-logout');
            btnLogout.addEventListener('click', async function (event) {
                event.preventDefault()

                fetch('/auth/logout')
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Logout berhasil, hapus token dari local storage
                            localStorage.removeItem('token');
                            // Redirect ke halaman login
                            window.location.href = '/auth/login';
                        } else {
                            console.log(data.msg);
                        }
                    })
                    .catch(error => {
                        console.log('Error : ', error);
                    });
            });
        });
    </script>
</body>

