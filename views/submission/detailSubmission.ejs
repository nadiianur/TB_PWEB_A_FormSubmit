    <script src="/assets/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/sidebars.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", async function () {
            const tbody = document.getElementById("formTableBody");
            const form_id = "<%= form_id %>";

            try {
                const response = await fetch(`http://localhost:3000/form/submissionMyForm/${form_id}`);
                const data = await response.json();

                if (data.success) {
                    const myFormSubmission = data.submissions;
                    console.log(myFormSubmission)
                    var i = 1;

                    myFormSubmission.forEach((doc) => {
                        const tr = document.createElement("tr");
                        tbody.appendChild(tr);

                        const no = document.createElement("td")
                        const nama = document.createElement("td")
                        const uploaded_file = document.createElement('td')
                        const description = document.createElement("td")
                        const created_at = document.createElement("td")
                        const status = document.createElement("td")
                        const action = document.createElement("td")

                        tbody.appendChild(tr)
                        tr.appendChild(no)
                        tr.appendChild(nama)
                        tr.appendChild(uploaded_file)
                        tr.appendChild(description)
                        tr.appendChild(created_at)
                        tr.appendChild(status)
                        tr.appendChild(action)

                        no.setAttribute('scope', 'row')

                        no.innerHTML = i;
                        nama.innerHTML = doc.nama
                        uploaded_file.innerHTML = doc.uploaded_file
                        description.innerHTML = doc.description
                        created_at.innerHTML = doc.created_at
                        status.innerHTML = doc.status
                        i++;

                        const file = document.createElement("a")
                        const down = document.createElement("a")

                        const logoFile = document.createElement("i")
                        const logoDown = document.createElement("i")

                        action.appendChild(file)
                        file.setAttribute('href', '/submission/viewFileSubmisison/' + doc.id);
                        file.classList.add("btn", "btn-primary", "btn-sm", "me-2")
                        file.appendChild(logoFile)
                        logoFile.classList.add("bi", "bi-file-text")

                        action.appendChild(down)
                        down.setAttribute('href', '/submission/downloadFileSubmission/' + doc.id);
                        down.classList.add("btn", "btn-secondary", "btn-sm", "me-2")
                        down.appendChild(logoDown)
                        logoDown.classList.add("bi", "bi-download")

                    });
                } else if (data.success == false) {
                    alert(data.msg);
                } else {
                    alert('Nothing submission in this form ');
                }
            } catch (error) {
                console.log(error);
            }


            const btnLogout = document.getElementById('btn-logout');
            btnLogout.addEventListener('click', async function (event) {
                event.preventDefault()

                fetch('/auth/logout')
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Logout berhasil, hapus token dari local storage
                            localStorage.removeItem('token');
                            // Redirect ke halaman login
                            window.location.href = '/auth/login';
                        } else {
                            console.log(data.msg);
                        }
                    })
                    .catch(error => {
                        console.log('Error : ', error);
                    });
            });
        })
    </script>
