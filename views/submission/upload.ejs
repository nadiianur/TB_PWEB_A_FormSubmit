<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.108.0">

    <link rel="canonical" href="https://getbootstrap.com/docs/5.3/examples/sidebars/">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/task.css">
    <link rel="stylesheet" href="/css/sidebars.css">
    <link rel="stylesheet" href="/css/style2.css">

    <style>
        .b-example-divider {
            height: 3rem;
            background-color: #E8E9EE;
            border: solid rgba(0, 0, 0, .15);
            border-width: 1px 0;
            box-shadow: inset 0 .5em 1.5em rgba(0, 0, 0, .1), inset 0 .125em .5em rgba(0, 0, 0, .15);
        }

        .b-example-vr {
            flex-shrink: 0;
            height: 100vh;
        }

        .buttonFile{
            border-radius:15px; 
            margin-right: 489px; 
            background-color:#6f799e;
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
        }
        .buttonFile:active{
            transform: translateY(4px);
        }
    </style>

</head>

<body>
    <main class="d-flex flex-nowrap vh-100">
        <!-- slides bar -->
        <div class="d-flex flex-column flex-shrink-0 p-3 side" style="width: 300px;">
            <ul class="nav nav-pills flex-column mb-auto">
                <br>
                <h2 class="h2bar"> &nbsp; Study In</h2>
                <hr class="hrbarA ">
                <li>
                    <a href="/form/home "
                        class="nav-link active bg-light list-group-item-action list-group-item-light p-2.8 text-dark fw-bold ">
                        <i class="bi bi-houses"></i>
                        Home
                    </a>
                </li>
                <br>
                <li>
                    <a href="/form/listMyform"
                        class="nav-link list-group-item-action list-group-item-dark p-2.8 text-dark fw-bold">
                        <i class="bi bi-folder2-open"></i>
                        My Form
                    </a>
                </li>
                <br>
                <li>
                    <a href="/submission/listMySubmission"
                        class="nav-link list-group-item-action list-group-item-dark p-2.8 text-dark fw-bold">
                        <i class="bi bi-file-earmark-arrow-down"></i>
                        Submission
                    </a>
                </li>
                <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
                <hr class="hrbar">
                <li>
                    <a href="/user/profile"
                        class="nav-link list-group-item-action list-group-item-dark p-2.8 text-white fw-bold">
                        <i class="bi bi-person"></i>
                        Profile
                    </a>
                </li>
                <li>
                    <a href="#" id="btn-logout"
                        class="nav-link list-group-item-action list-group-item-dark p-2.8 text-white fw-bold">
                        <i class="bi bi-box-arrow-right"></i>
                        LogOut
                    </a>
                </li>
            </ul>
        </div>
        <!-- end slide bar -->

        <div class="b-example-divider b-example-vr"  style="width:85.3%;">
            <br>
            <h2 class="tittle text-center my-3 text-dark">Submission Task</h2><br><br>
            <div class="kotak task-form-container1"><br>
                <div class="avatar-container">
                    <div class="avatar">
                        <img src="/img/profile.png" alt="Avatar"
                            style="width: 100px; height: 100px; margin-left: 50px;">
                    </div>
                    <div>
                        <h3 class="mb-3"><%= user.nama %></h3>
                    </div>
                </div>

                <div>
                    <h1 class="title mb-3" style="margin-left: 225px;"><%= item.tittle %></h1>
                    <p class="upload-info">Created at :</p>
                    <p class="upload-date mb-3"><%= item.created_at %></p>
                    <p class="instruction-info">Instruction :</p>
                    <p class="instruction-text mb-3"><%= item.description %></p>
                    <hr>
                </div>

                <div>
                    <!-- jika si user sudah pernah submit tugasnya di form yang dipilih -->
                    <% if (uploaded_file) { %>
                    <h2 class="answer-title mb-1">&nbsp; Answer</h2>
                    <ul class="">
                        <li class="list-group-item">
                            <div class="file-upload-container">
                                <div class="upload-container">
                                    <p style="color: black; margin-left: 25px;font-weight: bold; font-size: 18px;">
                                        My Submission File</p>
                                    <form action="/submission/viewFileSubmisison/<%= id%>" method="GET">
                                    <button class="btn btn-secondary buttonFile" style="margin-right: 510px;"
                                        type="submit">
                                        <h6 style="margin-top: 10px; text-align: center;"><%= uploaded_file %></h6>
                                    </button>
                                    </form>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item" style="margin-right: 220px;">
                            <div class="description-section">
                                <p style="color: black; margin-left:2px;font-weight: bold;" for="floatingInputDesc">
                                    Comments</p>
                                <textarea placeholder="Add a comment (optional)" type="text" class="form-control mb-5"
                                    id="floatingInputDesc" name="description" style="margin-left: 1px;"
                                    disabled><%= description || '' %></textarea>
                            </div>
                        </li>
                    </ul>
                    <div class="action-buttons ">
                        <a href="/form/home" class="cancel-button btn btn-secondary">
                            Cancel
                        </a>
                        <a href="/submission/editSubmission/<%= id %>" type="button"
                            class="upload-button btn btn-lg btn-warning me-3">
                            Edit
                        </a>
                    </div>

                    <!-- jika si user belum pernah submit tugasnya di form yang dipilih -->
                    <% } else { %>
                    <h2 class="answer-title mb-1">&nbsp; Answer</h2>
                    <form action="/submission/upload/<%= item.form_id%>" method="post" id="form-upload"
                        enctype="multipart/form-data">
                        <ul class="">
                            <li class="list-group-item">
                                <div class="file-upload-container">
                                    <div class="upload-container">
                                        <p style="color: black; margin-left: 22px;font-weight: bold; font-size: 18px;">
                                            Upload File</p>
                                        <input type="file" class="form-control" id="floatingInput"
                                            placeholder="file-upload" name="file">
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item" style="margin-right: 127px;">
                                <div class="description-section">
                                    <p style="color: black; margin-left:2px;font-weight: bold;" for="floatingInputDesc">
                                        Comments</p>
                                    <textarea placeholder="Add a comment (optional)" type="text" class="form-control"
                                        id="floatingInputDesc" name="description" style="margin-left: 1px;"></textarea>
                                </div>
                            </li>
                        </ul>
                    </form>
                    <div class="action-buttons">
                        <a href="/form/home" class="cancel-button btn btn-outline-danger">
                            Cancel
                        </a>
                        <button form="form-upload" class="upload-button btn btn-lg btn-primary btn-submit me-3"
                            type="submit">
                            Upload
                        </button>
                    </div>
                    <% } %>
                </div>

            </div>
        </div>
    </main>

    <script src="/assets/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/sidebars.js"></script>

    <script>
        const btnLogout = document.getElementById('btn-logout');
        btnLogout.addEventListener('click', async function (event) {
            event.preventDefault()

            fetch('/auth/logout')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Logout berhasil, hapus token dari local storage
                        localStorage.removeItem('token');
                        // Redirect ke halaman login
                        window.location.href = '/auth/login';
                    } else {
                        console.log(data.msg);
                    }
                })
                .catch(error => {
                    console.log('Error : ', error);
                });
        });


        const form = document.querySelector('#form-upload');
        form.addEventListener('submit', async (event) => {
            event.preventDefault();

            const description = document.getElementById('floatingInputDesc').value;
            const file = document.getElementById('floatingInput').files[0];

            const formData = new FormData();
            formData.append('description', description);
            formData.append('file', file);

            const form_id = '<%= item.form_id%>'
            const response = await fetch('http://localhost:3000/submission/upload/' + form_id, {
                method: 'POST',
                body: formData
            });

            const data = await response.json();

            if (data.success == true) {
                alert(data.msg);
                window.location.href = '/form/home';
            } else if (data.success == 'mine') {
                alert(data.msg);
            } else if (data.success == false) {
                alert(data.msg);
            }
        });
    </script>
</body>

</html>