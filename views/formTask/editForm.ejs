        <div class="b-example-divider b-example-vr " style="width:85.3%;">
            <div class="add">
                <div class="row">
                    <div class="col data ms-5" style="height: 600px;">
                        <br>
                        <h2 class="tittle text-center my-3 text-dark">Edit Form</h2>
                        <br> <br>
                        <div class="kotak task-form-container">
                            <form class="m-auto mt-5" action="/form/editForm/<%= form_id %>" method="post"
                                id="form-edit">
                                <ul class="">
                                    <li class="list-group-item">
                                        <div class="form-floating mb-2" style="margin-right: 60px;">
                                            <input type="text" class="form-control" id="floatingInputTittle"
                                                name="tittle" placeholder="tittle" value="<%= tittle %>"
                                                style="height: 90px;">
                                            <label for="floatingInputTittle"
                                                style="margin-left: 25px; margin-top: 10px;">Tittle Form</label>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="form-floating mb-2" style="margin-right: 60px;">
                                            <input type="text" class="form-control" id="floatingInputDesc"
                                                name="description" placeholder="description" value="<%= description %>"
                                                style="height: 200px;">
                                            <label for="floatingInputDesc"
                                                style="margin-left: 25px; margin-top: 10px;">Description</label>
                                            <br>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <form>
                                            <p style="color: black; margin-left: 65px;font-weight: bold;">Deadline</p>
                                            <input type="datetime-local" style="margin-left: 65px;" class="datetime"
                                                id="deadline" name="deadline" value="<%= deadline %>" required>
                                        </form>
                                    </li>
                                </ul>
                            </form>
                            <div class="action-buttons" style="margin-bottom: 50px;">
                                <!-- Button Cancel Edit -->
                                <a href="/form/listMyForm" class="cancel-button btn btn-outline-danger">
                                    Cancel
                                </a>
                                <!-- Button Edit -->
                                <button form="form-edit" class="btn btn-success btn-submit me-3"
                                    style="width: 120px; border-radius: 25px;">
                                    Update
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="/assets/dist/js/bootstrap.bundle.min.js"></script>

    <script src="/assets/js/sidebars.js"></script>


    <script>
        document.addEventListener("DOMContentLoaded", async function () {
            const form = document.querySelector('form');
            form.addEventListener('submit', async (event) => {
                event.preventDefault();

                const tittle = document.getElementById('floatingInputTittle').value;
                const description = document.getElementById('floatingInputDesc').value;
                const deadline = document.getElementById('deadline').value;

                const form_id = '<%= form_id %>';
                try {
                    const response = await fetch(
                        `http://localhost:3000/form/editForm/${form_id}`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                tittle: tittle,
                                description: description,
                                deadline: deadline
                            })
                        });

                    const data = await response.json()

                    if (data.success == true) {
                        alert(data.msg);
                        window.location.href = '/form/listMyForm';
                    } else if (data.success == false) {
                        alert(data.msg);
                        location.reload()
                    }
                } catch (error) {
                    console.log(error);
                    alert(error)
                }
            });


            const btnLogout = document.getElementById('btn-logout');
            btnLogout.addEventListener('click', async function (event) {
                event.preventDefault()

                fetch('/auth/logout')
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Logout berhasil, hapus token dari local storage
                            localStorage.removeItem('token');
                            // Redirect ke halaman login
                            window.location.href = '/auth/login';
                        } else {
                            console.log(data.msg);
                        }
                    })
                    .catch(error => {
                        console.log('Error : ', error);
                    });
            });
        })
    </script>
</body>

