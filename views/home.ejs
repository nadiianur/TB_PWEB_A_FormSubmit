        <div class="b-example-divider b-example-vr table" style="width:85.3%;">
            <div class="row">
                <div class="col data ms-5 mb-5">
                    <table class=" mt-3">
                        <tr>
                            <td class="w-50">
                                <br>
                                <h3 class="text-left my-1 fw-bold mb-3" style="color: #5A6794;">INI DI EDIT YA Welcome to StudyIn</h3>
                                <hr style="border-top: 2px dashed rgb(0, 0, 0);">
                                <h5 class="text-left my-1 fw-semibold mb-3" style="color: #000000">Hello! This is where
                                    you will see
                                    updates from your study.</h5>
                                <hr style="border-top: 2px dashed rgb(0, 0, 0);">
                            </td>
                        </tr>
                    </table>
                    <table>
                        <br>
                        <a href="/form/addForm"><button type="button" class="button btn btn-primary btn-lg"
                                type="button">+ Add New</button></a>
                    </table>
                    <table class="text-dark mt-5 bg-light shadow" style="border-radius: 20px; width: 15%;">
                        <tr>
                            <td>
                                <h1 class="mb-3 fw-bold" style="margin-left: 30px;" id="formCount"><%= formCount %></h1>
                            </td>
                            <td class="p-2">
                                <p class="fw-bold fs-6 mb-2">Form Tugas <br> <span class="fw-semibold"> New Updates
                                    </span></p>
                            </td>
                        </tr>
                    </table>

                    <% if (data && data.length > 0) { %>
                    <% data.forEach((item, index) => { %>
                    <table class="border bg-light shadow mt-5 w-50 tableForm" style="border-radius: 50px; height: 70px;"
                        form_id="<%= item.form_id %>" tittle="<%= item.tittle %>" user_id="<%= item.user_id %>"
                        created_at="<%= item.created_at %>" description="<%= item.description %>">
                        <tbody>
                            <tr>
                                <td class="pt-3 pe-5 ps-5">
                                    <h4 class="mt-3"><%= item.nama %></h4>
                                    <p>Deadline [ <%= item.deadline %> ]</p>
                                </td>
                            </tr>
                            <tr>
                                <td class="pt-2 pe-5 ps-5">
                                    <h2 class="fw-bold" style="margin-bottom: 30px;"> <%= item.tittle %></h2>
                                    <p style="font-weight: 500; margin-top: 5px;">Instructions :</p>
                                    <p style="font-size: large;"><%= item.description %></p>
                                    <!-- href="/submission/upload" -->
                                    <a href="/submission/upload/<%= item.form_id %>" type="button" class="btn btn-dark"
                                        id="btnTurnIn" style="border-radius: 25px; width: 125px; margin-bottom: 40px;">
                                        Turn In
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <% }); %>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

