    <script>
        const btnLogout = document.getElementById('btn-logout');
        btnLogout.addEventListener('click', async function (event) {
            event.preventDefault()

            fetch('/auth/logout')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Logout berhasil, hapus token dari local storage
                        localStorage.removeItem('token');
                        // Redirect ke halaman login
                        window.location.href = '/auth/login';
                    } else {
                        console.log(data.msg);
                    }
                })
                .catch(error => {
                    console.log('Error : ', error);
                });
        });


        document.addEventListener("DOMContentLoaded", async function () {
            const response = await fetch('http://studyin.northeurope.cloudapp.azure.com/form/home');

            const data = await response.json();

            if (data.success == true) {
                const formCount = data.formCount;
                document.getElementById('formCount').innerText = formCount;
            }
        })
    </script>

